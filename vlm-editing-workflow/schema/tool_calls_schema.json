{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3D Pipeline Tool Calls Schema",
  "description": "Structured schema for spatial 3D operations, eliminating natural language ambiguity",
  "type": "object",
  "required": ["tool_calls"],
  "properties": {
    "tool_calls": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/tool_call"
      }
    }
  },
  "definitions": {
    "tool_call": {
      "type": "object",
      "required": ["function_name", "parameters"],
      "properties": {
        "function_name": {
          "type": "string",
          "enum": [
            "extrude_faces_in_volume",
            "scale_vertices_in_volume", 
            "transform_vertices_in_volume",
            "apply_material_to_volume",
            "deform_volume_lattice",
            "subdivide_faces_in_volume",
            "inset_faces_in_volume"
          ]
        },
        "parameters": {
          "type": "object",
          "required": ["volume_identifier"],
          "properties": {
            "volume_identifier": {
              "$ref": "#/definitions/volume_identifier"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "volume_identifier": {
      "type": "object",
      "required": ["type", "center_xyz"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["box", "sphere", "cylinder", "cone"]
        },
        "center_xyz": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 3,
          "maxItems": 3,
          "description": "World-space coordinates [x, y, z]"
        },
        "dimensions_xyz": {
          "type": "array", 
          "items": {"type": "number", "minimum": 0},
          "minItems": 3,
          "maxItems": 3,
          "description": "Dimensions [width, height, depth] for box, [radius, radius, height] for cylinder"
        },
        "radius": {
          "type": "number",
          "minimum": 0,
          "description": "Radius for sphere volume type"
        },
        "rotation_quaternion_wxyz": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 4,
          "maxItems": 4,
          "description": "Rotation as quaternion [w, x, y, z]"
        }
      },
      "allOf": [
        {
          "if": {"properties": {"type": {"const": "box"}}},
          "then": {"required": ["dimensions_xyz"]}
        },
        {
          "if": {"properties": {"type": {"const": "sphere"}}},
          "then": {"required": ["radius"]}
        },
        {
          "if": {"properties": {"type": {"const": "cylinder"}}},
          "then": {"required": ["dimensions_xyz"]}
        },
        {
          "if": {"properties": {"type": {"const": "cone"}}},
          "then": {"required": ["dimensions_xyz"]}
        }
      ]
    }
  }
}